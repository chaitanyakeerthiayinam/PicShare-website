<!DOCTYPE html>
<html>
<head>
    <title>Upload Photo</title>
    <style>
         body {
            font-family: 'Montserrat', sans-serif;
            background-color: #ebd8f4; /* Light cyan background color */
        }
    </style>
</head>
<body>
    <h1>Upload a New Photo</h1>

    <form action="/upload" method="POST" enctype="multipart/form-data">
        <div>
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" class="<%= errors.find(e => e.param === 'title') ? 'error' : '' %>">
        </div>

        <div>
            <label for="description">Description:</label>
            <input type="text" name="description" id="description" class="<%= errors.find(e => e.param === 'description') ? 'error' : '' %>">
        </div>

        <div>
            <label for="photo">Image:</label>
            <input type="file" name="photo" id="photo"> <!-- Ensure the name attribute is "image" -->
        </div>

        <button type="submit">Upload</button>

    </form>
    <% if (errors) { %>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
</body>
</html>
